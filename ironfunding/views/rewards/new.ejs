<div class="container">
  <div class="row">
    <div class="col-sm-6 centered-form">
      <form action="/campaigns/<%= campaign._id %>/rewards" method="POST">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" name="title" id="title" class="form-control">
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <input type="text" name="description" id="description" class="form-control">
        </div>
        <div class="form-group">
          <label for="amount">Amount</label>
          <input type="number" name="amount" id="amount" class="form-control">
        </div>
        <div class="form-group">
          <label for="delivery">Expected Delivery Date</label>
          <input type="date" name="delivery" value="<%= campaign.inputFormattedDate %>" class="form-control">
        </div>
        <div class="form-group">
          <button type="submit">Create Reward</button>
        </div>
      </form>
    </div>
  </div>
</div>